[options]
CacheDir     = /var/cache/pacman/pkg/
HoldPkg      = pacman glibc garuda-system
Architecture = auto
ParallelDownloads = 10

# Temporary to avoid incompatabilities
IgnorePkg = python-telegram-send
IgnorePkg = arch-install-scripts

Color
NoProgressBar
CheckSpace

{% if caur_db_name == "garuda" %}
[garuda]
Include = /etc/pacman.d/chaotic-mirrorlist
SigLevel = PackageRequired
{% endif %}

[core]
Include = /etc/pacman.d/mirrorlist
SigLevel = PackageRequired

[extra]
Include = /etc/pacman.d/mirrorlist
SigLevel = PackageRequired

[community]
Include = /etc/pacman.d/mirrorlist
SigLevel = PackageRequired

[chaotic-aur]
Include = /etc/pacman.d/chaotic-mirrorlist
SigLevel = PackageRequired
